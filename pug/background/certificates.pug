unless _.isEmpty(resume.certificates)
  .detail#certificates
    .icon
      i.fs-lg.icon-board
      span.mobile-title Certificates

    .info
      h4.title.text-uppercase Certificates

      .content
        ul.list-unstyled.clear-margin
          each certificate in resume.certificates
            li.card.card-nested
              .content
                p.clear-margin(itemprop="certificate")
                  if certificate.website
                    strong
                      a(href=certificate.website, target="_blank")= certificate.title
                  else
                    strong= certificate.title

                  |, #{certificate.issuer}

                p.text-muted
                  small
                    |Issued on: #{certificate.date}

                .mop-wrapper!= certificate.summary
